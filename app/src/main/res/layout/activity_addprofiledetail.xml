<!-- Cleaned & Proportional Layout for Profile Data Page -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinkyellowbackground"
    tools:context=".MainActivity">

    <!-- Title BLATE -->
    <TextView
        android:id="@+id/titleBlate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLATE"
        android:textSize="34sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/helpIcon"
        android:layout_marginStart="32dp"/>

    <!-- Help Icon -->
    <ImageView
        android:id="@+id/helpIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_quiz_24"
        android:contentDescription="icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your Profile Data"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleBlate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Username -->
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_signup"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="16dp"
        android:hint="Username"
        android:padding="14dp"
        android:textSize="16sp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Date of Birth -->

    <!-- Gender Label -->

    <EditText
        android:id="@+id/dobInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_signup"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="16dp"
        android:hint="Date of Birth"
        android:inputType="date"
        android:padding="14dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameInput" />

    <TextView
        android:id="@+id/genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="16sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dobInput"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Gender Radio Group -->
    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/genderLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/maleOption"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_indicator"
            android:button="@null"
            android:text="Male"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/femaleOption"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/radio_button_indicator"
            android:button="@null"
            android:text="Female"
            android:gravity="center"/>
    </RadioGroup>

    <!-- Dropdown: Address -->
    <EditText
        android:id="@+id/addressInput"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_signup"
        android:hint="Address"
        android:padding="14dp"
        android:inputType="text"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/genderGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dropdown: Hobbies -->
    <Spinner
        android:id="@+id/hobbiesDropdown"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_signup"
        app:layout_constraintTop_toBottomOf="@+id/addressInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dropdown: Current Job -->
    <Spinner
        android:id="@+id/jobDropdown"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_signup"
        app:layout_constraintTop_toBottomOf="@+id/hobbiesDropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dropdown: Religion -->
    <Spinner
        android:id="@+id/religionDropdown"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_signup"
        app:layout_constraintTop_toBottomOf="@+id/jobDropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="Confirm"
        android:textColor="@color/white"
        android:backgroundTint="#FF0080"
        app:layout_constraintTop_toBottomOf="@+id/religionDropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
