<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ProfileCardImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/person" />

        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:background="@color/grey_background" />

        <TextView
            android:id="@+id/LocationCardTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta"
            android:textColor="#000000"
            android:background="@color/grey_background"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:drawableStart="@drawable/location_img"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/NameageCardTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/JobCardTV"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:text="Jessica Parker, 23"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/JobCardTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp"
            android:text="Professional Model"
            android:textColor="#000000"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>